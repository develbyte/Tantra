{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tantra DAG Schema",
  "type": "object",
  "required": ["id", "name", "nodes"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique pipeline identifier"
    },
    "name": {
      "type": "string",
      "description": "Pipeline name"
    },
    "version": {
      "type": "string",
      "description": "Pipeline version (ISO 8601 timestamp)"
    },
    "params": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["string", "number", "boolean"]
          },
          "default": {
            "type": ["string", "number", "boolean"]
          }
        }
      }
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "name"],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["task", "sensor", "branch", "map", "sql", "python"]
          },
          "name": {
            "type": "string"
          },
          "image": {
            "type": "string",
            "description": "Container image"
          },
          "command": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "inputs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "resources": {
            "type": "object",
            "properties": {
              "cpu": {
                "type": "string",
                "pattern": "^\\d+m$|^\\d+(\\.\\d+)?$"
              },
              "memory": {
                "type": "string",
                "pattern": "^\\d+[KMGT]i?$|^\\d+Mi$"
              }
            }
          },
          "retries": {
            "type": "integer",
            "minimum": 0
          },
          "timeout_seconds": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          }
        }
      }
    },
    "schedule": {
      "type": "object",
      "properties": {
        "cron": {
          "type": "string",
          "pattern": "^[0-9*/-]+\\s+[0-9*/-]+\\s+[0-9*/-]+\\s+[0-9*/-]+\\s+[0-9*/-]+$"
        }
      }
    },
    "secrets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["ref", "target"],
        "properties": {
          "ref": {
            "type": "string",
            "pattern": "^vault://"
          },
          "target": {
            "type": "string"
          }
        }
      }
    }
  }
}

